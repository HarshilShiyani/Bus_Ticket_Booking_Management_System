@{
    Layout = "_Layout";
}
@using System.Data;
@model DataTable
<div class="pagetitle">
    <h1>Routes</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">Routes</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h3>List of Route</h3>



        <div>
            <a type="button" class="btn btn-outline-primary" fdprocessedid="0c8579" asp-action="ExportRouteDetailToExcel" asp-controller="Route">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                    <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5"></path>
                    <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z"></path>
                </svg>
                Export to Excel
            </a>
            <a type="button" class="btn btn-outline-primary" fdprocessedid="0c8579" asp-action="ExportRouteDetailToPdf" asp-controller="Route">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                    <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5"></path>
                    <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z"></path>
                </svg>
                Export to PDF
            </a>
            <a type="button" class="btn btn-success btn-add" asp-controller="Route" asp-action="RouteAddEdit">Add New Route</a>
        </div>
    </div>
    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Route Name</th>
                        <th scope="col">Time</th>
                        <th scope="auto">Source</th>
                        <th scope="col">Destination</th>
                        <th scope="col">Starting Date</th>
                        <th scope="col">Valid Till</th>
                        <th scope="col">Bus Number</th>
                        <th scope="col">Bus Type</th>

                    </tr>
                </thead>
                <tbody id="myTable">

                    @if (Model.Rows.Count <= 0)
                    {
                        <tr>
                            <td class="col text-danger text-center">No records</td>
                        </tr>
                    }
                    else
                    {
                        @if (Model.Rows.Count > 0)
                        {
                        <tbody id="myTable">
                                @foreach (DataRow dataRow in Model.Rows)
                                {
                                <tr>
                                    <td>@dataRow["RouteName"].ToString()</td>
                                    <td>
                                            @dataRow["starting_time"].ToString()
                                    </td>
                                    <td>@dataRow["Source"].ToString()</td>
                                    <td>@dataRow["Destination"].ToString() </td>
                                    <td>
                                            @String.Format("{0:dd MMM yyyy}", dataRow["Starting_date"])
                                    </td>
                                    <td>
                                            @String.Format("{0:dd MMM yyyy}", dataRow["Ending_date"])
                                    </td>
                                    <td>@dataRow["RegistrationNumber"].ToString()</td>
                                    <td>@dataRow["TypeName"].ToString()</td>

                                    <td>
                                        <a type="button" class="btn btn-primary btn-sm" asp-route-RouteID="@Convert.ToInt32(dataRow["RouteID"])" asp-action="SelectRoute_By_RouteID">View Detail</a>
                                    </td>
                                    <td>
                                        <a type="button" class="btn btn-info" asp-controller="Route" asp-action="RouteAddEdit" asp-route-RouteID="@Convert.ToInt32(dataRow["RouteID"])">Edit</a>
                                    </td>
                                </tr>
                                }
                        </tbody>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


