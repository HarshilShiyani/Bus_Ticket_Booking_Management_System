@{
    Layout = "_Layout";
}
@using System.Data;
@model DataTable


<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h3>Bus Type Of List</h3>
        <div>
            <a type="button" class="btn btn-success btn-add">Add New Type Bus</a>
        </div>
    </div>
    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Bus Type</th>
                        <th scope="col">Capacity</th>
                        <th scope="col">Description</th>

                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody id="myTable">

                    @if (Model.Rows.Count <= 0)
                    {
                        <tr>
                            <td class="col text-danger text-center">Norecord</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (DataRow dataRow in Model.Rows)
                        {
                            <tr>
                                <td>@dataRow["TypeName"]</td>
                                <td>@dataRow["Capacity"]</td>
                                <td>@(dataRow["Description"] != null && !string.IsNullOrWhiteSpace(dataRow["Description"].ToString()) ? dataRow["Description"] : "--")</td>
                                <td>
                                    <a type="button" class="btn btn-danger">Delete</a>
                                    <a type="button" class="btn btn-info">edit</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
