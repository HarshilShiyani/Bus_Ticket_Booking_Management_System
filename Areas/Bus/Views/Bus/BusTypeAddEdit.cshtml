@model Bus_Ticket_Booking_Management_System.Areas.Bus.Models.BusTypemodel

<style>
    input[type="text"] {
        width: 50%;
    }
</style>
<div class="pagetitle">
    <h1>Bus</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">Add Edit</li>
        </ol>
    </nav>
</div>
@if (TempData["IsBusTypeAdded"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i>
        @TempData["IsBusTypeAdded"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h3 class="text-dark">BusType Add/Edit</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-area="Bus" asp-controller="Bus" asp-action="BusTypeSave">
            @Html.HiddenFor(x=>x.BusTypeID)

            <div class="mb-3">
                <label class="form-label">Bus Type</label>
                <input type="text" class="form-control" asp-for="TypeName" placeholder="Bus Type">
                <span class="form-text text-danger" asp-validation-for="TypeName"> </span>
            </div>

            <div class="mb-3">
                <label class="form-label">Capacity</label>
                <input type="text" class="form-control" asp-for="Capacity" placeholder="Capacity">
                <span class="form-text text-danger" asp-validation-for="Capacity"> </span>
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Description">
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
            <a asp-area="Bus" asp-controller="Bus" asp-action="BusTypeList" class="btn btn-primary">Back to List</a>
        </form>
    </div>
</div>