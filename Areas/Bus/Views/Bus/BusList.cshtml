@{
    Layout = "_Layout";
}
@using System.Data;
@model DataTable
<div class="pagetitle">
    <h1>Bus</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">BusesList</li>
        </ol>
    </nav>
</div>
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h3>Bus List</h3>
        <div>
            <a type="button" class="btn btn-success btn-add" asp-area="Bus" asp-controller="Bus" asp-action="BusAddEdit">Add New Bus</a>
        </div>
    </div>
    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Bus Number</th>
                        <th scope="col">Bus Type</th>
                        <th scope="col">Manufacturer</th>
                        <th scope="col">ModelNo</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody id="myTable">

                    @if (Model.Rows.Count <= 0)
                    {
                        <tr>
                            <td class="col text-danger text-center">Norecord</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (DataRow dataRow in Model.Rows)
                        {
                            <tr>
                                <td>@dataRow["RegistrationNumber"]</td>
                                <td>@dataRow["TypeName"]</td>
                                <td>@dataRow["Manufacturer"]</td>
                                <td>@dataRow["ModelNo"]</td>


                                <td>
                                    <a type="button" class="btn btn-danger" onclick="confirmDelete(@Convert.ToInt32(dataRow["BusID"]))">Delete</a>
                                    <a type="button" class="btn btn-info" asp-route-BusID="@Convert.ToInt32(dataRow["BusID"])" asp-area="Bus" asp-controller="Bus" asp-action="BusAddEdit">edit</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function confirmDelete(parameter) {
            event.preventDefault();
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!",
            }).then((result) => {
                if (result.isConfirmed) {
                    // User confirmed, proceed with deletion
                    $.ajax({
                        url: "@Url.Action("BusDelete", "Bus")" + "?&BusID=" + parameter,
                        type: "POST",
                        success: function (result) {
                            // Use SweetAlert to show a success message
                            Swal.fire({
                                title: "Deleted!",
                                text: "The Station has been deleted.",
                                icon: "success",
                            }).then(() => {
                                // Redirect to the CityList action
                                window.location.href = "@Url.Action("BusList", "Bus")";
                            });
                        },
                        error: function () {
                            // Use SweetAlert to show an error message
                            Swal.fire({
                                title: "Error",
                                text: "An error occurred while deleting the Station.",
                                icon: "error",
                            });
                        },
                    });
                }
            });
        }
    </script>
}
