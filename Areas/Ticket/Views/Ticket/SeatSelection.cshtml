<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seat Selection</title>
    <style>
        /* Add your CSS styles for seat selection here */
        .seat {
            width: 30px;
            height: 30px;
            margin: 5px;
            display: inline-block;
            border: 1px solid #ccc;
            background-color: #e0e0e0;
            text-align: center;
            line-height: 30px;
            cursor: pointer;
        }

        .selected {
            background-color: #3498db;
            color: #fff;
        }
    </style>
</head>
<body>

    <h1>Seat Selection</h1>

    <div id="seatMap">
        <!-- Seat selection area will be dynamically generated here -->
    </div>

    <script>
        // Example seat data (replace with your actual seat data)
        var seatData = [
            { row: 1, seatNumber: 'A', status: 'available' },
            { row: 1, seatNumber: 'B', status: 'available' },
            { row: 1, seatNumber: 'C', status: 'booked' },
            // Add more seat data as needed
        ];

        // Function to generate the seat map
        function generateSeatMap() {
            var seatMapContainer = document.getElementById('seatMap');

            seatData.forEach(function (seat) {
                var seatElement = document.createElement('div');
                seatElement.className = 'seat';
                seatElement.textContent = seat.seatNumber;

                // Set status-dependent styles
                if (seat.status === 'booked') {
                    seatElement.style.backgroundColor = '#d3d3d3';
                    seatElement.style.cursor = 'not-allowed';
                    seatElement.disabled = true;
                } else {
                    seatElement.addEventListener('click', function () {
                        toggleSeatSelection(seat);
                    });
                }

                seatMapContainer.appendChild(seatElement);
            });
        }

        // Function to toggle seat selection
        function toggleSeatSelection(seat) {
            var seatElement = document.querySelector('.seat[data-row="' + seat.row + '"][data-seat="' + seat.seatNumber + '"]');

            if (seatElement.classList.contains('selected')) {
                // Deselect the seat
                seatElement.classList.remove('selected');
                // TODO: Remove seat from the selected seats array
                console.log('Deselected seat:', seat);
            } else {
                // Select the seat
                seatElement.classList.add('selected');
                // TODO: Add seat to the selected seats array
                console.log('Selected seat:', seat);
            }
        }

        // Initialize seat map
        generateSeatMap();
    </script>

</body>
</html>
