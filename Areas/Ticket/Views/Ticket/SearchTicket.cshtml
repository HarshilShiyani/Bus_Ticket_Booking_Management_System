@{
    Layout = "_Layout";
}
@using System.Data
@model Bus_Ticket_Booking_Management_System.Areas.Ticket.Models.TicketSearchmodel
<head>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- jQuery Validation -->
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>

    <!-- jQuery Unobtrusive Validation -->
    <script src="https://cdn.jsdelivr.net/jquery.validation.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <style>
        /* Add this style in your HTML or CSS file */
        .select2-container .select2-selection--single {
            border: none !important;
            box-shadow: none !important;
        }

        #onDate {
            border: none !important;
            box-shadow: none !important;
        }
    </style>
</head>

<div class="pagetitle">
    <h1>Ticket</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">SearchTicket</li>
        </ol>
    </nav>
</div>


<section class="section">
    <div class="row">
        <div class="col">
            <div class="card pt-4">
                <div class="card-body">
                    <form class="row" id="searchticketform" method="post">
                        <div class="col">
                            <div class="row">
                                <span class="input-group-text mb-2">
                                    <i class="bi bi-bus-front"></i>
                                    <select class="form-control" id="SourceID" asp-for="SourceID" asp-items="@(new SelectList(ViewBag.Station_DDL,"SourceID","StationName"))"
                                            style="border: none !important; box-shadow: none !important;">
                                        <option disabled selected>Select Source</option>
                                    </select>
                                </span>
                                <span asp-validation-for="SourceID" class="text-danger mt-1"></span>
                            </div>
                        </div>
                        <div class="col-1 pt-2 ps-5 ">
                            <a>
                                <i class="bi bi-arrow-left-right bg-info fs-5 rounded"></i>
                            </a>
                        </div>
                        <div class="col">
                            <span class="input-group-text mb-2">
                                <i class="bi bi-bus-front"></i>
                                <select class="form-control" id="DestinatioID" asp-for="DestinationID" asp-items="@(new SelectList(ViewBag.Station_DDL,"SourceID","StationName"))"
                                        style="border: none !important; box-shadow: none !important;">

                                    <option disabled selected>Select Destination</option>

                                </select>

                            </span>
                            <span asp-validation-for="DestinationID" class="text-danger"></span>
                        </div>

                        <div class="col">
                            <span class="input-group-text">
                                <i class="bi bi-calendar-date"></i>
                                <input type="date" class="form-control" id="onDate" asp-for="Date">

                            </span>
                        </div>
                        <div class="col pt-2">
                            <label class="form-label">
                                <button type="submit" id="btnsubmit" class="btn btn-primary">Submit</button>
                            </label>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <div id="ticketcard" class="card">
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize select2 for SourceID and DestinatioID
            $('#SourceID, #DestinatioID').select2({
                allowClear: false,
                width: '100%',
                dropdownAutoWidth: false,
                closeOnSelect: true,
            });

            // Attach a submit event handler to the form
            $('#searchticketform').submit(function (event) {
                // Prevent the default form submission
                event.preventDefault();
                // Check if the form is valid
                if ($(this).valid()) {
                    // Serialize the form data
                    var serializedFormData = $(this).serialize();

                    var ticketSearchModel = {};

                    var formDataObject = {};
                    $.each(serializedFormData.split('&'), function (index, value) {
                        var pair = value.split('=');
                        formDataObject[pair[0]] = decodeURIComponent(pair[1] || '');
                        ticketSearchModel[pair[0]] = decodeURIComponent(pair[1] || '');
                    });
                    console.log(formDataObject.SourceID);
                    console.log(formDataObject.DestinationID);

                    // Make an AJAX request
                    $.ajax({
                        url: "@Url.Action("DisplaySerchedTicket", "Ticket", new { area = "Ticket" })",
                        method: "GET",
                        data: { 'SourceID': formDataObject.SourceID, 'DestinationID': formDataObject.DestinationID },
                        success: function (data) {
                            data = JSON.parse(data);
                            console.log(data);

                            // Assume 'data' is an array containing ticket details
                            // Clear existing content in the container
                            $('#ticketcard').empty();

                            $.each(data, function (index, ticket) {
                                // Load and render the partial view for a single ticket
                                $.get('@Url.Action("RenderTicketPartial", "Ticket", new { area = "Ticket" })', { ticket: JSON.stringify(ticket) }, function (html) {
                                    $('#ticketcard').append(html);
                                });
                            });
                        },
                        error: function (error) {
                            console.error(error);
                        }
                    });

                }
            });
        });
    </script>
    }
