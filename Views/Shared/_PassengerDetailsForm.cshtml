@model List<Bus_Ticket_Booking_Management_System.Areas.Seat.Models.Seatmodel>
<div class="mt-3">
    <label class="form-label" for="passengerName">Passenger Name </label>
    <input type="text" class="form-control" id="passengerName" placeholder="Name" name="passengerName" required>
    <span id="passengerName" class="text-danger"></span>
</div>

<div class="mt-3">
    <label class="form-label">Email address</label>
    <input type="email" class="form-control" name="EmailID" required>
</div>
<div class="mt-3">
    <label class="form-label">Mobile Number</label>
    <input type="text" class="form-control" name="MobileNo" required>
</div>


