@model Bus_Ticket_Booking_Management_System.Models.Login
@using System.Data
@{
    Layout = "_Layout_Login";
}
<main>
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a class="logo d-flex align-items-center w-auto">
                                <img src="~/assets/img/logo.png" alt="">
                                <span class="d-none d-lg-block">NiceAdmin</span>
                            </a>
                        </div><!-- End Logo -->

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <i class="fa fa-times-circle"></i>
                                    <h5 class="card-title text-center pb-0 fs-4">Forgot Your Account Password</h5>
                                    <p class="text-center small">Enter your username & password to login</p>
                                    @if (TempData["ForgotPasswordmeaasge"] != null)
                                    {
                                        <p class="text-danger">
                                            @Html.Raw(TempData["ForgotPasswordmeaasge"])
                                        </p>
                                    }
                                </div>

                                <form class="row g-3 needs-validation" asp-controller="Login" asp-action="ForgotPasswordAction">

                                    <div class="col-12">
                                        <label for="yourUsername" class="form-label">Username</label>
                                        <div class="input-group has-validation">
                                            <span class="input-group-text" id="inputGroupPrepend">@@</span>
                                            <input type="email" asp-for="Username" class="form-control" id="yourUsername" placeholder="Email Address Or Username">
                                        </div>
                                        <span asp-validation-for="Username"></span>
                                    </div>

                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary" id="resetPasswordBtn">Reset Password</button>
                                    </div>

                                </form>
                                <div class="col-12">
                                    <a asp-action="LoginPage" asp-controller="Login">Sign In</a>
                                </div>
                            </div>
                        </div>

                        <div class="credits">
                            Designed by <b>Harshil Shiyani</b>
                        </div>

                    </div>
                </div>
            </div>

        </section>

    </div>
</main><!-- End #main -->
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#resetPasswordBtn").submit(function () {
                var username = $("#username").val();

                $.ajax({
                    url: "@Url.Action("ForgotPasswordAction", "Login")",
                    method: "POST",
                    data: { username: username },
                    success: function (result) {
                        if (result.success) {
                            $("#messageContainer").html("<div class='alert alert-success'>" + result.message + "</div>");
                        } else {
                            $("#messageContainer").html("<div class='alert alert-danger'>" + result.message + "</div>");
                        }
                    },
                    error: function () {
                        $("#messageContainer").html("<div class='alert alert-danger'>An error occurred while processing your request.</div>");
                    }
                });
            });
        });
    </script>
}